            <input type="radio" id="monedaChoice2" name="moneda" value="Dolares" />
            <label for="monedatChoice2">Dolares</label>
        </div>*@
                        <div class="form-group">
                            <label for="cmbTipoMoneda" class="control-label">Moneda</label>
                            <select id="cmbTipoMoneda" class="form-control" placeholder="Tipo de moneda" required data-error="El tipo de moneda es Experiencia es requerida."></select>
                            <div class="help-block with-errors"></div>
                        </div>

                        <div class="form-group">
                            <label for="cmbTipo" class="control-label">Tipo de Trabajo</label>
                            <select id="txtTipoTrabajo" class="form-control" placeholder="Tipo de Trabajo" required data-error="Experiencia es requerida."></select>
                            <!-- Error -->
                            <div class="help-block with-errors"></div>
                        </div>

                        <div class="form-group">
                            <label for="txtCargo" class="control-label">Cargo</label>
                            <input type="text" id="txtCargo" class="form-control" placeholder="Cargo" />
                        </div>
                        <div class="form-group">
                            <label for="txtAreaTrabajo" class="control-label">Area de Trabajo</label>
                            <input type="text" id="txtAreaTrabajo" class="form-control" placeholder="Area de Trabajo" />
                        </div>
                        <div class="form-group">
                            <label for="cmbTipoEmpresa">Empresa</label>
                            <select id="cmbTipoEmpresa" class="form-control" placeholder="Nombre de la empresa" required data-error="Empresa es requerido."></select>
                            <!-- Error -->
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                        <div class="form-group">
                            <label id="labelEstado" for="txtEstadoOferta" class="control-label">Estado</label>
                            <input type="checkbox" id="txtEstadoOferta" class="form-control" placeholder="Nombre de Oferta" />
                        </div>
                        <div class="modal-footer">
                            <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                            <button id="btncerrar" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
                        </div>
</form>
            </div>
        </div>
    </div>
    </div>

