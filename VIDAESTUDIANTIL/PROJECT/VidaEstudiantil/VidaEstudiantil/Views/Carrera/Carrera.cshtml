@{
    ViewBag.Title = "CRUD Carrera";
}

<style>
    #dt-records tbody th, #dt-records tbody td {
        padding: 0.25rem !important;
        line-height: 1.3em !important;
        vertical-align: middle !important;
    }

    #btnnuevo {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>

<div class="br-section-wrapper">
    <script>

    </script>
    <button id="btnnuevo" class="btn btn-primary" data-target="#modal-record"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</button>

    <table id="dt-carrera" class="table-wrapper table display responsive nowrap table-hover" style="width:100%" data-page-length='10'>
        <thead class="thead-colored thead-primary">
            <tr>
                <th>Id Carrera</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Facultad</th>
                <th>Opciones</th>
            </tr>
        </thead>
    </table>
</div>

<div id="modal-record" class="modal" role="dialog">
    <div class="modal-dialog" style="width: 400px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Direcciones AW</h3>
            </div>
            <div class="modal-body">
                <form id="NewRecord" role="form">
                    <div>
                        <div class="form-group">
                            <label id="labelId" for="txtIdCarrera" class="control-label">Id</label>
                            <input type="text" id="txtIdCarrera" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label for="txtNombre" class="control-label">Nombre</label>
                            <input type="text" id="txtNombre" class="form-control" placeholder="Nombre de Carrera" />
                        </div>
                        <div class="form-group">
                            <label id="labelEstado" for="txtEstadoCarrera" class="control-label">Estado</label>
                            <input type="checkbox" id="txtEstadoCarrera" class="form-control" placeholder="Nombre de Carrera" />
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="cmbTipo">Facultad</label>
                                <select id="cmbTipo" class="form-control" placeholder="Tipo" required data-error="Facultad es requerido."></select>
                                <!-- Error -->
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                        <button id="btncerrar" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Carrera.js"></script>